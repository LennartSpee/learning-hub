<p class="text-center">
  <strong>Create a new offer</strong>
</p>
<ul>
<%= simple_form_for [ @offer ] do |f| %>
  <%= f.input :price %>
  <%= f.input :duration %>
  <%= f.input :description %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.submit "Submit offer", class: "btn btn-primary" %>
<% end %>
