<div class="mt-5 mx-5">
<p class="text-center">
  <h1>Create a new offer</h1>
</p>
<ul>
<%= simple_form_for [ @offer ] do |f| %>
  <%= f.input :price %>
  <%= f.input :duration %>
  <%= f.input :description %>
  <%= f.input :title %>
  <%= f.input :location %>
  <%= f.submit "Submit offer", class: "btn btn-primary" %>
<% end %>
<div class="pt-5 center"><%= link_to 'Back to list page', root_path, class: "btn btn-accent" %></div>
</div>
